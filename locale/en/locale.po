msgid "plugins.generic.fullTextSearch.name"
msgstr "Full Text Search Plugin"

msgid "plugins.generic.fullTextSearch.description"
msgstr "Provides a database-backed full-text index for OJS submissions, compatible with MySQL and PostgreSQL."

msgid "plugins.generic.fullTextSearch.settings.selectContextsDescription"
msgstr "Choose which contexts should have their search index rebuilt."

msgid "plugins.generic.fullTextSearch.settings.rebuildButton"
msgstr "Rebuild Search Index"

msgid "plugins.generic.fullTextSearch.rebuildComplete"
msgstr "Search index rebuild completed successfully for the selected contexts."

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearch"
msgstr "Clear Standard Search Tables"

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearchDescription"
msgstr "Optionally clear the standard OJS search tables before rebuilding. This will remove all existing search data from the default search system."

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearchLabel"
msgstr "Clear standard search tables before rebuilding index"

msgid "plugins.generic.fullTextSearch.search.error"
msgstr "An unexpected error happened while searching"
