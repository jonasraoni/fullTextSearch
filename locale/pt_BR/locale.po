msgid "plugins.generic.fullTextSearch.name"
msgstr "Plugin de Pesquisa em Texto Completo"

msgid "plugins.generic.fullTextSearch.description"
msgstr "Fornece um índice de texto completo baseado em banco de dados para submissões OJS, compatível com MySQL e PostgreSQL."

msgid "plugins.generic.fullTextSearch.settings.selectContextsDescription"
msgstr "Escolha quais contextos devem ter seu índice de pesquisa reconstruído."

msgid "plugins.generic.fullTextSearch.settings.rebuildButton"
msgstr "Reconstruir Índice de Pesquisa"

msgid "plugins.generic.fullTextSearch.rebuildComplete"
msgstr "A reconstrução do índice de pesquisa foi concluída com sucesso para os contextos selecionados."

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearch"
msgstr "Limpar Tabelas de Pesquisa Padrão"

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearchDescription"
msgstr "Opcionalmente limpar as tabelas de pesquisa padrão do OJS antes de reconstruir. Isso removerá todos os dados de pesquisa existentes do sistema de pesquisa padrão."

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearchLabel"
msgstr "Limpar tabelas de pesquisa padrão antes de reconstruir o índice"

msgid "plugins.generic.fullTextSearch.search.error"
msgstr "Ocorreu um erro inesperado durante a pesquisa"
