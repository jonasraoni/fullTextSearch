msgid "plugins.generic.fullTextSearch.name"
msgstr "Plugin pro fulltextové vyhledávání"

msgid "plugins.generic.fullTextSearch.description"
msgstr "Poskytuje databázový fulltextový index pro OJS příspěvky, kompatibilní s MySQL a PostgreSQL."

msgid "plugins.generic.fullTextSearch.settings.selectContextsDescription"
msgstr "Vyberte, které kontexty by měly mít přestavěný vyhledávací index."

msgid "plugins.generic.fullTextSearch.settings.rebuildButton"
msgstr "Přestavět Vyhledávací Index"

msgid "plugins.generic.fullTextSearch.rebuildComplete"
msgstr "Přestavění vyhledávacího indexu bylo úspěšně dokončeno pro vybrané kontexty."

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearch"
msgstr "Vymazat Standardní Vyhledávací Tabulky"

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearchDescription"
msgstr "Volitelně vymazat standardní OJS vyhledávací tabulky před přestavbou. Tím se odstraní všechna existující vyhledávací data ze standardního vyhledávacího systému."

msgid "plugins.generic.fullTextSearch.settings.clearStandardSearchLabel"
msgstr "Vymazat standardní vyhledávací tabulky před přestavbou indexu"

msgid "plugins.generic.fullTextSearch.search.error"
msgstr "Při vyhledávání došlo k neočekávané chybě"
